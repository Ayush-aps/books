<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8">
  <!-- Hero Section -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
    <p class="text-xl text-gray-600 max-w-3xl mx-auto">We'd love to hear from you! Reach out with any questions, feedback, or inquiries.</p>
  </div>
  
  <div class="flex flex-col lg:flex-row gap-8 mb-12">
    <!-- Contact Form -->
    <div class="lg:w-2/3">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
        
        <form action="/contact/submit" method="POST" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Your Name *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary"
              >
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary"
              >
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject *</label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              required 
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary"
            >
          </div>
          
          <!-- Add this hidden input -->
          <input type="hidden" name="source" value="contact_form">
          
          <!-- Type field to help categorize -->
          <div>
            <label for="type" class="block text-sm font-medium text-gray-700 mb-1">Message Type *</label>
            <select 
              id="type" 
              name="type" 
              required 
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary"
            >
              <option value="general">General Question</option>
              <option value="feedback">Feedback</option>
              <option value="support">Customer Support</option>
              <option value="complaint">File a Complaint</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message *</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required 
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary"
            ></textarea>
          </div>
          
          <div>
            <button 
              type="submit" 
              class="bg-primary text-dark px-6 py-3 rounded-md hover:bg-opacity-90 transition w-full md:w-auto"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
    
    <!-- Contact Information -->
    <div class="lg:w-1/3">
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h3 class="text-xl font-bold mb-4">Contact Information</h3>
        
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="bg-primary rounded-full w-10 h-10 flex items-center justify-center mr-4 flex-shrink-0">
              <i class="fas fa-map-marker-alt text-dark"></i>
            </div>
            <div>
              <h4 class="font-medium">Our Office</h4>
              <p class="text-gray-600">123 Book Street, Reading Lane<br>Mumbai, 400001</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="bg-primary rounded-full w-10 h-10 flex items-center justify-center mr-4 flex-shrink-0">
              <i class="fas fa-phone-alt text-dark"></i>
            </div>
            <div>
              <h4 class="font-medium">Phone</h4>
              <p class="text-gray-600">Customer Support: +91 8530206759<br>Business Inquiries: +91 8530206790</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="bg-primary rounded-full w-10 h-10 flex items-center justify-center mr-4 flex-shrink-0">
              <i class="fas fa-envelope text-dark"></i>
            </div>
            <div>
              <h4 class="font-medium">Email</h4>
              <p class="text-gray-600">Support: support@bookish.in<br>Careers: careers@bookish.in<br>Press: media@bookish.in</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="bg-primary rounded-full w-10 h-10 flex items-center justify-center mr-4 flex-shrink-0">
              <i class="fas fa-clock text-dark"></i>
            </div>
            <div>
              <h4 class="font-medium">Working Hours</h4>
              <p class="text-gray-600">Monday - Friday: 9:00 AM - 8:00 PM<br>Saturday: 10:00 AM - 6:00 PM<br>Sunday: Closed</p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4">Connect With Us</h3>
        
        <div class="flex space-x-4">
          <a href="#" class="bg-primary hover:bg-opacity-80 transition text-dark w-10 h-10 rounded-full flex items-center justify-center">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="bg-primary hover:bg-opacity-80 transition text-dark w-10 h-10 rounded-full flex items-center justify-center">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="bg-primary hover:bg-opacity-80 transition text-dark w-10 h-10 rounded-full flex items-center justify-center">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="#" class="bg-primary hover:bg-opacity-80 transition text-dark w-10 h-10 rounded-full flex items-center justify-center">
            <i class="fab fa-linkedin-in"></i>
          </a>
          <a href="#" class="bg-primary hover:bg-opacity-80 transition text-dark w-10 h-10 rounded-full flex items-center justify-center">
            <i class="fab fa-youtube"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Map -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-12">
    <h3 class="text-xl font-bold mb-4">Our Location</h3>
    <!-- Replace with your preferred location -->
    <div class="w-full h-96 rounded-lg overflow-hidden">
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d241316.6433229747!2d72.74109995784574!3d19.08250324646852!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be7c6306644edc1%3A0x5da4ed8f8d648c69!2sMumbai%2C%20Maharashtra!5e0!3m2!1sen!2sin!4v1711773252572!5m2!1sen!2sin" 
        width="100%" 
        height="100%" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>
  </div>
  
  <!-- FAQ Section -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-center mb-8">Frequently Asked Questions</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold mb-2">How do I track my order?</h3>
        <p class="text-gray-700">Once your order is confirmed, you'll receive a tracking ID via email. You can use this ID to track your order on our website under "My Orders" section.</p>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold mb-2">What payment methods do you accept?</h3>
        <p class="text-gray-700">We accept all major credit/debit cards, UPI payments, net banking, and wallet transfers for a seamless checkout experience.</p>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold mb-2">How do I become a seller on Bookish?</h3>
        <p class="text-gray-700">Simply register for a seller account, complete the verification process, and start listing your books. Visit our Pricing page for more details.</p>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold mb-2">What is your return policy?</h3>
        <p class="text-gray-700">We offer a 7-day return policy for books in their original condition. Please refer to our Returns page for the complete process and conditions.</p>
      </div>
    </div>
  </div>
</div>

<script>
  function toggleComplaintWarning(value) {
    const warningElement = document.getElementById('complaintWarning');
    if (value === 'complaint') {
      warningElement.classList.remove('hidden');
    } else {
      warningElement.classList.add('hidden');
    }
  }
</script>

